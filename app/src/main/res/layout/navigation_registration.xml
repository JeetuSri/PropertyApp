<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:isScrollContainer="true"
    android:background="#ffffff"
    android:nestedScrollingEnabled="true"
    android:orientation="horizontal"
    android:scrollbars="horizontal">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/contain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize"
            android:weightSum="1">
            <com.example.a10389.propertyapp.ExpandenListView
                android:id="@+id/imageView"
                android:layout_width="175dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundbutton"
                android:drawableLeft="@drawable/ic_camera_enhance_black_24dp"
                android:drawableStart="@drawable/ic_camera_enhance_black_24dp"
                android:text="Take Picture"
                android:padding="8dp"
                android:textColor="#ffffff"
                android:textSize="14dp" />
            <Button
                android:id="@+id/gallerybutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_toRightOf="@+id/button1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/roundbutton"
                android:drawableStart="@drawable/ic_image_black_24dp"
                android:text="Select Picture"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:padding="8dp"
                android:drawableLeft="@drawable/ic_image_black_24dp" />
            <Button
                android:id="@+id/locationbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button1"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundbutton"
                android:drawableStart="@drawable/ic_explore_black_24dp"
                android:text="Set Location"
                android:padding="8dp"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:drawableLeft="@drawable/ic_explore_black_24dp" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@+id/locationbutton"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>

            <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/prodLatitudeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitude:"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"/>
                <TextView
                    android:id="@+id/prodLongitudeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Longitude:"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="80dp"
                    />
            </android.support.v7.widget.CardView>

            <android.support.design.widget.TextInputLayout
            android:id="@+id/layoutbrandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card"
            android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
            <EditText
                android:id="@+id/brandName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Brand Name:"
                android:textSize="14dp"
                android:focusable="true"
                />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutmodelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutbrandName"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <EditText
                    android:id="@+id/modelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Model Name:"
                    android:textSize="14dp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutLocationTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutmodelName"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >
                <com.pchmn.materialchips.ChipsInput
                    android:id="@+id/locationTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutmodelName"
                    app:hint="Location Tag:"
                    android:textSize="8dp"
                   />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutLocationTag"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price:"
                    android:text="0"
                    android:textSize="14dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutPrice"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <EditText
                    android:id="@+id/width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Width:"
                    android:text="0"
                    android:textSize="14dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutWidth"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <EditText
                    android:id="@+id/height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Height:"
                    android:text="0"
                    android:textSize="14dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutHeight"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <EditText
                    android:id="@+id/remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Remark:"
                    android:textSize="14dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutAttributeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutRemark"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <EditText
                    android:id="@+id/attributeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Attribute Name:"
                    android:textSize="14dp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutAttributeDisplayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutAttributeName"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <EditText
                    android:id="@+id/attributeDisplayName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Attribute Display Name:"
                    android:textSize="14dp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutAttributeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutAttributeDisplayName"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <EditText
                    android:id="@+id/attributeValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Attribute Value:"
                    android:textSize="14dp"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit"
                android:layout_below="@+id/layoutAttributeValue"
                android:text="Submit"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>