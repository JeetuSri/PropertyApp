<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/colorWhite"
    android:layout_height="fill_parent" >

    <ImageButton
        android:id="@+id/imagebutton"
        style="@android:style/Widget.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="0dp"
        android:layout_toRightOf="@+id/image"
        android:paddingLeft="80dp"
        android:layout_marginRight="0dp"
        android:background="@null"
        app:srcCompat="@drawable/mr_dialog_close_light" />

    <TextView
        android:id="@+id/brandNamelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:layout_below="@+id/image"
        android:text="brandName:"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/brandName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_toRightOf="@+id/brandNamelabel"
        android:paddingLeft="3dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/modelNamelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brandNamelabel"
        android:paddingLeft="3dp"
        android:text="modelName:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/modelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brandName"
        android:layout_toRightOf="@+id/modelNamelabel"
        android:paddingLeft="3dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pricelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modelNamelabel"
        android:paddingLeft="3dp"
        android:text="price:"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modelName"
        android:layout_toRightOf="@+id/pricelabel"
        android:paddingLeft="3dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/infobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:text="More"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/price"
       android:onClick="myFunction()"
        />


    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:padding="1dp"
        android:paddingLeft="10dp"
        app:srcCompat="@android:drawable/sym_def_app_icon"
         />

</RelativeLayout>